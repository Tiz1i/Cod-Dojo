

@model User
@{
    ViewData["Title"] = "Register";
}
<div class="row mt-5 mb-5">
    <h1 class="col-sm-10">Register</h1>
    
    
</div>


<form class="col-sm-6"  asp-controller="Home" asp-action="Register" method="post">


     <div class="form-group">
    <span asp-validation-for="FirstName"></span>
    <label asp-for="FirstName"></label>
    <input asp-for="FirstName" class="form-control" >
   
  </div>
  <div class="form-group">
    <span asp-validation-for="LastName"></span>
    <label asp-for="LastName"></label>
    <input asp-for="LastName" class="form-control" >
   
  </div>
  <div class="form-group">
    <span asp-validation-for="Email"></span>
    <label asp-for="Email"></label>
    <input asp-for="Email" class="form-control" >
   
  </div>
  



 
  <div class="form-group">
    <span asp-validation-for="Password"></span>
    <label asp-for="Password"></label>
    <input asp-for="Password" class="form-control" >
   
  </div>
  <div class="form-group">
    <span asp-validation-for="Confirm"></span>
    <label asp-for="Confirm"></label>
    <input asp-for="Confirm" class="form-control" >
   
  
  </div>
  <button type="submit" class="btn btn-primary mt-3">Submit</button>
</form>
