@model Products
<h1 class="d-flex justify-content-center mb-5">Products | <a href="Categories">Categories</a> </h1>
<div class="row">
    <div class="col-sm-6">
        <h3> New Product </h3>
        <form action="Product" method="post">
            <div class="form-group">
                <span asp-validation-for="Name"></span>
                <label asp-for="Name"></label>
                <input class="form-control" asp-for="Name">
            </div>
            <div class="form-group mt-3 mb-3">
                <span asp-validation-for="Description"></span>
                <label asp-for="Description"></label>
                <input class="form-control" asp-for="Description">
            </div>
            <div class="form-group mt-3 mb-3">
                <span asp-validation-for="Price"></span>
                 <label asp-for="Price"></label>
                <input class="form-control" asp-for="Price">
            </div>

            <a href="Categories" type="submit" class="btn btn-primary">Create</a>
        </form>
    </div>
    <div class="col-sm-6">
    <h1>Existing Products</h1>
    @foreach (var Product in ViewBag.AllProducts)
    {
        <a href="Product/@Product.ProductId" class="row">@Product.Name</a>
    }
</div>
</div>