@model Dish

  <h3 class="d-flex m-auto">Add a Dish!</h3>

  <form action="/DishCreate" method="post">
    <div class="form-group">
      <span asp-validation-for="Name"></span>
      <label asp-for="Name"></label>
      <input  class="form-control" asp-for="Name" >
    </div>
    <div class="form-group mt-3 mb-3">
      <span asp-validation-for="ChefId"></span>
      <label aps-for="ChefId">Choose Chef</label>

      <select name = "ChefId">
          @foreach (var chef in ViewBag.Chefs)
          {
              <option value="@chef.ChefId">@chef.Name @chef.LastName</option>
          }
          
      </select>
    </div>
    <div class="form-group">
      <span asp-validation-for="Calories"></span>
      <label asp-for="Calories"></label>
      <input  class="form-control" asp-for="Calories" >
    </div>
    <div class="form-group">
      <span asp-validation-for="Tastiness"></span>
      <label asp-for="Tastiness"></label>
      <input  class="form-control" asp-for="Tastiness" >
    </div>
      <div class="form-group">
      <span asp-validation-for="Description"></span>
      <label asp-for="Description"></label>
      <input  class="form-control" asp-for="Description" >
    </div>
    
    
    <button type="submit" class="btn btn-primary">Add Dish</button>
</form>